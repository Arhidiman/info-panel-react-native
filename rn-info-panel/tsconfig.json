{
  "compilerOptions": {
    
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    
    "allowSyntheticDefaultImports": true,
    
    "lib": [
      "dom",
      "es2015",
      "scripthost",
      "es2015.promise"
    ]
  },
  
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "extends": "expo/tsconfig.base"
}
